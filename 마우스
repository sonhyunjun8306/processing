float easing = 0.1;
float x;
float y;
float px;
float py;
void setup(){
  size(1000,120);
}
void draw(){
  float targetX = mouseX;
  float targetY = mouseY;
  x+=(targetX-x)*easing;
  y+=(targetY-y)*easing;
  float weight=dist(x,y,px,py);
  strokeWeight(weight);
  line(x,y,px,py);
  px=x;
  py=y;
}
